# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Rust source files
*.rs text eol=lf

# Config files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary
